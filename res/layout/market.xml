<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent" android:orientation="vertical">
    <LinearLayout android:id="@+id/linearLayout1" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_gravity="center_vertical|center|clip_horizontal" android:gravity="center" android:background="#bbb">
        <EditText android:layout_width="wrap_content" android:id="@+id/editText1" android:text="Search" android:layout_weight="2" android:layout_height="wrap_content"></EditText>
    </LinearLayout>
    <View android:id="@+id/view1" android:layout_width="wrap_content" android:layout_height="2dip"></View>
    <LinearLayout android:id="@+id/linearLayout3" android:layout_width="match_parent" android:layout_height="wrap_content" android:background="#fff">
        <TextView android:id="@+id/textView1" android:layout_height="wrap_content" android:layout_weight="1" android:layout_width="fill_parent" android:gravity="center" android:background="#000" android:layout_margin="2dip" android:text="Name"></TextView>
        <TextView android:id="@+id/textView2" android:layout_height="wrap_content" android:layout_weight="1" android:layout_width="fill_parent" android:gravity="center" android:background="#000" android:layout_margin="2dip" android:text="Shares"></TextView>
        <TextView android:id="@+id/textView3" android:layout_height="wrap_content" android:text="Price" android:layout_weight="1" android:layout_width="fill_parent" android:layout_gravity="center_vertical|center_horizontal|center" android:gravity="center" android:background="#000" android:layout_margin="2dip"></TextView>
    </LinearLayout>
    <LinearLayout android:id="@+id/linearLayout2" android:layout_width="match_parent" android:orientation="vertical" android:layout_height="match_parent">
        <ListView android:id="@+id/listView1" android:layout_width="match_parent" android:layout_height="match_parent"></ListView>
    </LinearLayout>
</LinearLayout>
